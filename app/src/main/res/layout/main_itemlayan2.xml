<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="6dp"
        android:elevation="6dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="382dp"
            android:padding="15dp"
            android:background="@drawable/photoback">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img2"
                android:layout_width="164dp"
                android:layout_height="202dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/eventnamegym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img2"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:text="event name"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/availablegym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventnamegym"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:text="available"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/evaluationgym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/availablegym"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="5dp"
                android:text="evaluation"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/locationgym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/evaluationgym"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="1dp"
                android:text="location"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>