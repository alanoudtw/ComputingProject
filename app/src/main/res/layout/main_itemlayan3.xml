<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:elevation="6dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="382dp"
            android:padding="15dp"
            android:background="@drawable/photoback">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img3"
                android:layout_width="164dp"
                android:layout_height="202dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/eventnamehorse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img3"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:text="event name"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/availablehorse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventnamehorse"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:text="available"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/evaluationhorse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/availablehorse"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="5dp"
                android:text="evaluation"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/locationhorse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/evaluationhorse"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="1dp"
                android:text="location"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationhorse"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/btnedit3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="تحديث"
                android:textAllCaps="false"
                android:background="@drawable/rounded1"/>

            <Button
                android:id="@+id/btndelete3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnedit3"
                android:text="حذف"
                android:background="@drawable/rounded1"
                android:textAllCaps="false" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>