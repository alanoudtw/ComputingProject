<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:elevation="6dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="398dp"
            android:background="#C4A484"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img1"
                android:layout_width="164dp"
                android:layout_height="202dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/eventnamesport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img1"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:text="event name"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/availablesport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventnamesport"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"
                android:text="available"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/evaluationsport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/availablesport"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="5dp"
                android:text="evaluation"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/locationsport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/evaluationsport"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="1dp"
                android:text="location"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationsport"
                android:orientation="horizontal">

            </LinearLayout>

            <Button
                android:id="@+id/btnEdit1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDelete1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnEdit1"
                android:text="Delete"
                android:textAllCaps="false" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>